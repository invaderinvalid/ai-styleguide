{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "out",
      "rootDir": "src",
      "strict": true,
      "lib": [
        "es6"
      ],
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      ".vscode-test"
    ]
  }
  